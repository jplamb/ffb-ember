<h3>Standings</h3>
<div>Overall Standings</div>
<table class="standings-table">
	<tr class="standings-row">
		<th>Place</th>
		<th>Team</th>
		<th>Points</th>
	</tr>
	{{#each standings as |team index|}}
		<tr class="standings-row">
			<td>{{sum index 1}}</td>
			<td>{{team.[0]}}</td>
			<td>{{team.[1]}}</td>
		</tr>
	{{/each}}
</table>

<br>
{{drop-down options=weeks selected=weekSelected}}

<div>Weekly Results</div>
<table class="standings-table">
  <tr class="standings-row">
    <th>Place</th>
    <th>Team</th>
    <th>Points</th>
  </tr>
  {{#each weekStandings as |team index|}}
    <tr class="standings-row">
      <td>{{sum index 1}}</td>
      <td>{{team.[0]}}</td>
      <td>{{team.[1]}}</td>
    </tr>
  {{/each}}
</table>


